    <script src="https://kendo.cdn.telerik.com/2021.1.330/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.1.330/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2021.1.330/js/kendo.aspnetmvc.min.js"></script>
    <link href="https://kendo.cdn.telerik.com/2021.1.330/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" type="text/css" />
    <script>
        function Delete() {
            $.ajax({
                url: "@Url.Action("RemoveFile", "Home")",
                type: 'POST'
            });
        }
    </script>
</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container input-group">
                @await Html.PartialAsync("_CreateFolders")
                <input type="button" class="btn btn-sm" name="Delete" onclick="Delete()" value="Удалить элемент">
                @await Html.PartialAsync("_LoadFile")
                <input class="btn btn-sm" id="loadFile2" value="Скачать файл">
                <input class="btn btn-sm" id="loadFile3" value="Удалить файл">
                <input class="btn btn-sm" id="loadFile4" value="Переименовать">
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
