<a class="btn btn-sm" data-toggle="modal" data-target="#AddFolder">Создать папку</a>

<div class="modal fade bd-example-modal-sm" id="AddFolder" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" id="for" enctype="multipart/form-data" asp-controller="Home" asp-action="AddFolder">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Название папки</label>
                        <input type="text" class="form-control" name="folderName">
                    </div>
                    <button type="submit" class="btn-sm btn-primary">Создать</button>
                </form>
            </div>
        </div>
    </div>
</div>
